<server xmlns="http://mina.apache.org/ftpserver/spring/v1"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://mina.apache.org/ftpserver/spring/v1 http://mina.apache.org/ftpserver/ftpserver-1.0.xsd"
        id="p3p-ftpserver"
        max-logins="10"
        anon-enabled="false"
        max-anon-logins="5"
        max-login-failures="10"
        login-failure-delay="300">

    <file-user-manager file="properties/ftpusers.properties" encrypt-passwords="true"/>

    <listeners>
        <nio-listener name="default" port="8021" implicit-ssl="true" idle-timeout="60" local-address="127.0.0.1">
            <!--ssl>
                <keystore file="keystore.jks" password="changeit" key-password="changeit" />
                <truststore file="truststore.jks" password="secret"/>
            </ssl-->
            <data-connection idle-timeout="60">
                <active enabled="true" local-address="127.0.0.1" local-port="8023" ip-check="true"/>
                <passive ports="8020" address="127.0.0.1" external-address="127.0.0.1"/>
            </data-connection>
            <blacklist></blacklist>
        </nio-listener>
    </listeners>
</server>
